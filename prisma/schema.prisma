generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Campaign {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique // ex: 'black-friday', 'google-ads'
  leads     Lead[]
  createdAt DateTime @default(now())
}

model Lead {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String

  // Endereço
  cep       String
  street    String
  number    String
  city      String
  state     String

  // Relação com Campanha
  campaignId Int
  campaign   Campaign @relation(fields: [campaignId], references: [id])

  createdAt DateTime @default(now())
}